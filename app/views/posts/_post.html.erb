<% if post.persisted? %>
  <div>
    <img src="assets/icon_photo_small.png">
    <%= link_to post.user.full_name, user_posts_path(post.user) %>
    <p>
      <%= post.content %>
    </p>
  </div>
  <div>
    <%= like_display(post).html_safe %>
    <%= like_or_unlike_link(post) %>
    <%= post_owner_link_option(post) %>
  </div>
  <div>
    <%= render @comments= post.comments %>
  </div>
  <%= render partial: "shared/comment_form", locals:  {parent: post} %>
<% end %>
